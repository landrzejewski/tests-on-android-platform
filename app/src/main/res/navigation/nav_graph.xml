<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ForecastFragment">

    <fragment
        android:id="@+id/ForecastFragment"
        android:name="pl.training.goodweather.forecast.view.forecast.ForecastFragment"
        android:label="@string/forecast_fragment_label"
        tools:layout="@layout/fragment_forecast">

        <action
            android:id="@+id/action_show_forecast_details"
            app:destination="@id/ForecastDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/ForecastDetailsFragment"
        android:name="pl.training.goodweather.forecast.view.forecastdetails.ForecastDetailsFragment"
        android:label="@string/forecast_details_fragment_label"
        tools:layout="@layout/fragment_forecast_details">

        <action
            android:id="@+id/action_show_forecast"
            app:destination="@id/ForecastFragment" />
    </fragment>
</navigation>